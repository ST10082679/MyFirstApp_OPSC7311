<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="232dp"

        android:layout_height="309dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/starsuckslogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/hammersmith_one"
        android:text="@string/order_now"
        android:textColor="@color/starbucks_green"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_sb1"
                android:layout_width="232dp"
                android:layout_height="152dp"
                tools:srcCompat="@drawable/sb1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img_sb2"
                android:layout_width="232dp"
                android:layout_height="152dp"
                tools:srcCompat="@drawable/sb2"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img_sb3"
                android:layout_width="232dp"
                android:layout_height="152dp"
                tools:srcCompat="@drawable/sb3"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img_sb4"
                android:layout_width="232dp"
                android:layout_height="152dp"
                tools:srcCompat="@drawable/sb4"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img_sb5"
                android:layout_width="232dp"
                android:layout_height="152dp"
                tools:srcCompat="@drawable/sb5"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>